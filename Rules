#!/usr/bin/env ruby
require 'compass'
require 'grid-coordinates'
Compass.add_project_configuration 'compass.config'

preprocess do
  generate_man_page_fragments
end

route '/static/*' do
  # /static/foo.ext → /foo.ext
  item.identifier[7..-2] + '.' + item[:extension]
end

compile '/static/*' do; end

compile '/code/*/' do
  nil # Don't complile code directory
end

route '/code/*/' do
  nil # Don't create routes for code data
end

compile '/stylesheets/*/' do
  filter :sass, Compass.sass_engine_options.merge(:syntax => :scss)
  filter :rainpress
end

route '/stylesheets/*/' do
  item.identifier.chop + '.css'
end

route '/markup/*' do
  # /markup/foo.markdown → /foo/index.html
  item.identifier[7..-1] + 'index.html'
end

compile '/markup/*' do
  filter :r_code_fix
  filter :erb
  filter :rdiscount
  filter :colorize_syntax, :colorizers => {
    :css => :pygmentize,
    :r => :pygmentize,
  }
  layout 'default'
end

layout '*', :haml, :format => :html5
